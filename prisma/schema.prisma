// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}
model User {
  id     String   @id  @default(uuid()) @map("_id")
  email  String   @unique
  name   String   
  posts  Post[]  
  comments Comment[]
  likes   Like[]
}

model Post {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   
  user      User      @relation(fields: [userId], references: [id])
  content   String
  concern   String
  image     String?
  isChecked Boolean
  title   String
  comments  Comment[]
  createdAt DateTime  @default(now())
  likes     Like[]    
}

model Comment {
  id      String       @id @default(auto()) @map("_id") @db.ObjectId
  content String
  postId  String  @db.ObjectId
  post    Post     @relation(fields: [postId], references: [id])
  userId  String
  user    User     @relation(fields: [userId], references: [id])
}

model Like {
  id      String       @id @default(auto()) @map("_id") @db.ObjectId
  postId  String  @db.ObjectId
  post    Post     @relation(fields: [postId], references: [id])
  userId  String
  user    User     @relation(fields: [userId], references: [id])
}